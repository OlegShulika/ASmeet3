<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/button_margin"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/srv_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/srv_data_label" />

        <EditText
            android:id="@+id/srv_data_received"
            android:layout_width="match_parent"
            android:layout_height="@dimen/srv_data_height"
            android:gravity="top"
            android:inputType="none"
            android:text="@string/text_from_service" />

    </LinearLayout>

    <Button
        android:id="@+id/button_stop_srv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_margin"
        android:text="@string/stop_service_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


</android.support.constraint.ConstraintLayout>